<application>
<name>robotPathPlanner EXAMPLE1</name>

<dependencies>
</dependencies>

<module>
   <name>fakeMobileBaseTest</name>
   <parameters>--holonomic</parameters>
   <node>console</node>
</module>

<module>
   <name>yarpdev</name>
   <parameters>--device map2DServer --mapCollection mapsExample</parameters>
   <node>console</node>
</module>

<module>
   <name>yarpdev</name>
   <parameters>--device locationsServer --local /locationsServer</parameters>
   <node>console</node>
</module>

<module>
   <name>yarpdev</name>
   <parameters>--device transformServer --ROS "(enable_ros_publisher 0)" "(enable_ros_subscriber 0)"</parameters>
   <node>console</node>
</module>

<module>
   <name>yarpdev</name>
   <parameters>--device Rangefinder2DWrapper --subdevice fakeLaser --period 10 --name /ikart/laser:o --test use_mapfile --map_file C:\\software\\maps\\map_test.yaml</parameters>
   <node>console</node>
</module>

<module>
   <name>robotGoto</name>
   <parameters>--context robotPathPlannerExample --from robotGoto_ikart.ini</parameters>
   <node>console</node>
</module>

<module>
   <name>robotPathPlanner</name>
   <parameters>--context robotPathPlannerExample --from robotPathPlanner_ikart.ini </parameters>
   <node>console</node>
</module>

<module>
   <name>yarpview</name>
   <parameters>--name /plannerView:i</parameters>
   <node>console</node>
</module>

<module>
   <name>localizationServer</name>
   <parameters>--context robotPathPlannerExample --from localizationServer.ini</parameters>
   <node>console</node>
</module>

<module>
   <name>robotPathPlannerExample</name>
   <parameters></parameters>
   <node>console</node>
</module>

<connection>
  <from>/robotGoto/control:o</from>
  <to>/fakeMobileBaseTest/control:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/robotPathPlanner/map:o</from>
  <to>/plannerView:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/robotPathPlanner/commands:o</from>
  <to>/robotGoto/rpc</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/robotGoto/status:o</from>
  <to>/robotPathPlanner/navigationStatus:i</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/robotGoto/speak:o</from>
  <to>/iSpeak</to>
  <protocol>tcp</protocol>
</connection>



<connection>
  <from>/robotPathPlanner/yarpviewTarget:o</from>
  <to>/robotPathPlanner/rpc</to>
  <protocol>tcp</protocol>
</connection>

<connection>
  <from>/fakeMobileBaseTest/odometry:o</from>
  <to>/fakeLaser/location:i</to>
  <protocol>tcp</protocol>
</connection>

