<application>
<name>robotGoto EXAMPLE1</name>

<dependencies>
</dependencies>

<module>
   <name>fakeMobileBaseTest</name>
   <parameters>--holonomic</parameters>
   <node>console</node>
</module>

<module>
   <name>localizationServer</name>
   <parameters>--context robotGotoExample --from localizationServer.ini</parameters>
   <node>console</node>
</module>


<module>
   <name>yarpdev</name>
   <parameters>--device locationsServer --local /locationsServer</parameters>
   <node>console</node>
</module>

<module>
   <name>yarpdev</name>
   <parameters>--device transformServer --ROS "(enable_ros_publisher 0)" "(enable_ros_subscriber 0)"</parameters>
   <node>console</node>
</module>

<module>
   <name>yarpdev</name>
   <parameters>--device Rangefinder2DWrapper --subdevice fakeLaser --period 10 --name /ikart/laser:o --test map_test --map_file C:\\software\\maps\\map_test.yaml</parameters>
   <node>console</node>
</module>

<module>
   <name>robotGoto</name>
   <parameters>--context robotGotoExample --from robotGoto_ikart.ini</parameters>
   <node>console</node>
</module>

<connection>
  <from>/robotGoto/control:o</from>
  <to>/fakeMobileBaseTest/control:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/fakeMobileBaseTest/odometry:o</from>
  <to>/robotGoto/odometry:i</to>
  <protocol>udp</protocol>
</connection>

<connection>
  <from>/fakeMobileBaseTest/odometry:o</from>
  <to>/robotGoto/localization:i</to>
  <protocol>udp</protocol>
</connection>


<connection>
  <from>/fakeMobileBaseTest/odometry:o</from>
  <to>/fakeLaser/location:i</to>
  <protocol>tcp</protocol>
</connection>

</application>
